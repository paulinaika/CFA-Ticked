<p id="notice"><%= notice %></p>


<%= form_tag(ticks_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Ticks" %>
<%= submit_tag "Search", :name => nil %>
<% end %>

<% if @ticks.blank? %>
  <h5>There are no results that match your search: <%= params[:search] %>.</h5>
<% end %>

<h1>Ticks</h1>

<table>
  <thead>
    <tr>
      <th>Common name</th>
      <th>Scientific name</th>
      <th>Host species</th>
      <th>Common parasites</th>
      <th>Pathogenic effect</th>
      <th>Morphology</th>
      <th>Description</th>
      <th>Control measures</th>
      <th>Latitude</th>
      <th>Longtitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ticks.each do |tick| %>
      <tr>
        <td><%= tick.common_name %></td>
        <td><%= tick.scientific_name %></td>
        <td><%= tick.host_species %></td>
        <td><%= tick.common_parasites %></td>
        <td><%= tick.pathogenic_effect %></td>
        <td><%= tick.morphology %></td>
        <td><%= tick.description %></td>
        <td><%= tick.control_measures %></td>
        <td><%= tick.latitude %></td>
        <td><%= tick.longtitude %></td>
          <% if current_user.admin? %>
        <td><%= link_to 'Show', tick %></td>
        <td><%= link_to 'Edit', edit_tick_path(tick) %></td>
        <td><%= link_to 'Delete', tick, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
